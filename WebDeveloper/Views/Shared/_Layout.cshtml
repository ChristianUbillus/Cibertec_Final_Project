<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mi Aplicación HTML5</title>
    @Scripts.Render("~/bundles/jquery")    
    @Scripts.Render("~/bundles/modernizr")  
    @Styles.Render("~/Content/css")
    <script src="~/Scripts/jquery-ui-1.11.4.js" type="text/javascript"></script>
    <script src="~/Scripts/custom/ajax.js" type="text/javascript"></script>
</head>
<body>
    <header>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Cibertec Web", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <nav class="navbar-collapse collapse">                    
                    @Html.Partial("_MenuOption")
                    @Html.Partial("_LoginPartial")
                </nav>
            </div>
        </div>

    </header>
    <section class="container body-content">
        @RenderBody()
    </section>
    <section>
        <button onclick="getResource('/WebDeveloper/Personal/EmailList/1')">Test Button</button>
    </section>
    @*<footer>
        &copy; @DateTime.Now.Year - Todos los derechos reservados al autor.
    </footer>*@
    <div id="divDialog" style="background-color: aqua;"></div>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
